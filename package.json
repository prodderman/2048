{
  "name": "2048svelte",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "author": "",
  "license": "ISC",
  "scripts": {
    "build": "better-npm-run build:prod",
    "dev": "better-npm-run watch:dev",
    "gh-pages": "npm run build && gh-pages -d build"
  },
  "betterScripts": {
    "watch:dev": {
      "command": "webpack-dev-server --watch --progress --colors --config webpack/dev.config.js",
      "env": {
        "NODE_ENV": "development",
        "WATCH_MODE": true
      }
    },
    "build:prod": {
      "command": "webpack --progress --colors --config webpack/prod.config.js",
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "babel-loader": "^8.0.6",
    "better-npm-run": "^0.1.1",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^2.1.1",
    "gh-pages": "^2.0.1",
    "html-webpack-plugin": "^3.2.0",
    "mini-css-extract-plugin": "^0.7.0",
    "style-loader": "^0.23.1",
    "svelte": "^3.4.4",
    "svelte-hot-loader": "^1.5.0",
    "svelte-loader": "^2.13.4",
    "webpack": "^4.33.0",
    "webpack-cli": "^3.3.3",
    "webpack-dev-server": "^3.7.1"
  },
  "dependencies": {
    "@babel/core": "^7.4.5",
    "normalize.css": "^8.0.1",
    "ramda": "^0.26.1"
  }
}
